<h2 style="text-align:center"><%="#{@partner.name}さんとのチャット"%></h2>
<div id="chats">
  <% @chats.each do |chat|%>
    <%if chat.users_id==current_user.id%>
        <p><%=current_user.name%> : <%=chat.message%></p>
    <%else%>
        <p><%=@partner.name%> : <%=chat.message%></p>
    <%end%>
  <%end%>
</div>

<%= form_with model:@chat,local:true do |f| %>
  <div class="form-group">
    <%= f.label :message %>
    <%= f.text_field :message, class: 'form-control book_title' %>
    <%= f.hidden_field :partner_id, :value => @partner.id %>
  </div>
  <div class="form-group">
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>



